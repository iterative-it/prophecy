{
    "name":         "phpspec/prophecy",
    "description":  "Highly opinionated mocking framework for PHP 5.3+",
    "keywords":     ["Mock", "Stub", "Dummy", "Double", "Fake", "Spy"],
    "homepage":     "https://github.com/phpspec/prophecy",
    "type":         "library",
    "license":      "MIT",
    "authors":      [
        {
            "name":      "Konstantin Kudryashov",
            "email":     "ever.zet@gmail.com",
            "homepage":  "http://everzet.com"
        },
        {
            "name":      "Marcello Duarte",
            "email":     "marcello.duarte@gmail.com"
        }
    ],

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/iterative-it/instantiator.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/iterative-it/phpspec.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/iterative-it/phpunit.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/iterative-it/prophecy.git"
        }
    ],

    "require": {
        "php":                               "^5.3|^7.0",
        "phpdocumentor/reflection-docblock": "^2.0|^3.0.2|^4.0",
        "sebastian/comparator":              "^1.1|^2.0",
        "doctrine/instantiator":             "dev-php7.0",
        "sebastian/recursion-context":       "^1.0|^2.0|^3.0"
    },

    "require-dev": {
        "phpspec/phpspec": "dev-php7.0",
        "phpunit/phpunit": "dev-php7.0"
    },

    "autoload": {
        "psr-0": {
            "Prophecy\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Fixtures\\Prophecy\\": "fixtures"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.7.x-dev"
        }
    }
}
